@import 'def_colors';
#progress{
  display:none;
  background:$bg3;
  color:#fff;
  font-size:170%;
  height:25px;
  padding:10px 0 15px;
  position:fixed;
  top: 0;
  right: 1em;
  text-align:center;
  width:320px;
  font-weight:bold;
  -moz-border-radius-bottomleft:15px;
  -moz-border-radius-bottomright:15px;
  -webkit-border-bottom-left-radius: 15px;
  -webkit-border-bottom-right-radius: 15px;
}
#progress img{
  vertical-align:middle;
  padding-right:10px;
}