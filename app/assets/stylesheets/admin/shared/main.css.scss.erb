@import 'def_colors';

body{background-image: url(<%= asset_path 'admin/background.png' %>);
	padding:20px;
	font: .75em "HelveticaNeue", "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.container {width:auto;}
textarea {width:90%;}
#page_container {border: solid 1px $bd2; background-color:$bg1;}
#page_head { height: 45px;border-bottom:solid 4px $bd2;}
#page_breadcrumbs { height: 20px;background-color: $bg2; padding-left: 12px;}
#page_body { border:solid 1px green; background-color: $bg1;}
#page_foot { border:solid 1px blue; background-color: $bg2;}

#main_menu {top: 13px; left: 300px; position: relative;}

#contents {padding:10px;}
.logo { height:30px; left: 30px; top: 29px; position:absolute;}
.color-title{margin-top:8px; padding:4px; background-color: $bg2; font-size: 130%;}
.span-half {float:left;width:46%;margin-right:10px;}
.shadow {
  -moz-box-shadow: 3px 3px 5px #333;
  -webkit-box-shadow: 3px 3px 5px #333;
  box-shadow: 3px 3px 5px #333;
  background: url('<%= asset_path 'admin/dialog_back.png' %>') repeat-x top;
  background-color: $bg2;
}  
.hot-zone { background-color: #FBFEE9; padding:6px;}
.ui-widget-header
{
    background: none;
    border: none;
    font-size: 120%;
}
fieldset{padding:5px; font-family:verdana, sans-serif; margin-bottom:0.5em; border:solid 1px $bg3;}
legend{border:solid 1px $bg3; padding: 2px 6px; background-color: $bg3; color: white;}
input {background-color: $bg1; font-size:110%; padding:3px;}
input[type=text]{border:solid 1px #bbb;}
input[type=text]:focus {border:solid 1px red;background-color:lightyellow;}
input[type=text][readonly]{background-color: $bg2; border:none; border-bottom:solid 1px $bg1;color:$ptn3;}
p{margin:3px 0;}

.thumbs{
  margin-top: 10px;
  div.thumb {float:left;margin:4px;
    div.buttons {text-align:center;margin-top:4px;}
  }
}
div#login{position:absolute;right:30px;}
.note-text {color: $ptn3;}
