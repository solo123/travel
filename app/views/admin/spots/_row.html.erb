<div class='obj.t' id="<%= dom_id obj %>">
	<%= image_tag obj.destination.photo.photo_t if obj.destination && obj.destination.photo %>
	<div class='spot-title'>
		<h2>
			<%= obj.visit_order %> of Day <%= obj.visit_day %>:
			<%= obj.destination.title + ', ' + obj.destination.title_cn if obj.destination %>
		</h2>
		<div class='buttons'>
			<%= link_to '<-- Use this image as tour icon.',"spots/#{obj.id}", :remote => true %><br />
			<%= link_to 'Edit', "spots/#{obj.id}/edit", :remote => true, :class => 'edit_button'   %>
		</div>
	</div>
	<div class='clear'></div>
	<% if obj.description %>
	<div class='spot-en'>
		<%= raw obj.description.en %>
	</div>
	<div class='spot-cn'>
		<%= raw obj.description.cn %>
	</div>
	<% end %>
	<div class='clear'></div>
</div> 
