<% @object.build_tour_setting if !@object.tour_setting %>
<%= f.fields_for :tour_setting do |s| %>
  <div class="container">
		<div class="span-8">
	  <%= f.field_container :weekly do %>
	  	<%= s.label :weekly %> (Sun..Sat = 0..6)<br />
	  	<%= s.text_field :weekly %>
	  <% end %>
	  <%= f.field_container :is_auto_gen do %>
	  	<%= s.label :is_auto_gen %><br />
	  	<%= s.select :is_auto_gen, [['manual', 0],['auto gen', 1]], {} %>
	  <% end %>
	  </div>
	  <div class='span-8 last'>
	  <%= f.field_container :has_seat_table do %>
	  	<%= s.label :has_seat_table %><br />
	  	<%= s.select :has_seat_table, [['no seat table', 0],['has seat table', 1]], {} %>
	  <% end %>
	  <%= f.field_container :is_float_price do %>
	  	<%= s.label :is_float_price %><br />
	  	<%= s.select :is_float_price, [['cannot change price', 0],['can change price', 1]], {} %>
	  <% end %>
		</div>
	</div>
<% end %>
