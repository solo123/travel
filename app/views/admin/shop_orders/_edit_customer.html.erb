<p>
	<b>Search(by Name, Tel, Email or address): </b><br /><input type='text' id='search_customer' />
</p>
<hr />
<% @shop_order.build_customer unless @shop_order.customer %>
<%= form_for(@shop_order, :url => admin_shop_order_path(@shop_order), :remote => true) do |f| %>
	<%= hidden_field_tag :p, 'customer' %>
	<%= f.fields_for :customer do |c| %>
	<%= c.text_field :customer_id %>
	<p>
		<%= c.label :full_name %>
		<%= c.text_field :full_name %>
	</p>
	<p>
		<%= c.label :telphone %>
		<%= c.text_field :tel%>
	</p>
	<p>
		<%= c.label :bill_address %>
		<%= c.text_field :bill_address %>
	</p>
	<p>
		<%= c.label :email %>
		<%= c.text_field :email %>
	</p>
	<p>
	</p>
	<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>