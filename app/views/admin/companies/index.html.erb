<div class='toolbar'>
  <ul class='actions'>
    <li>
    <%= button_link_to 'Add Company', new_admin_company_path, {:remote => true, :icon => 'add', :id => 'admin_new_company'} %>
    </li>
  </ul>
  <br class='clear' />
</div>

<h1><%= raw "#{t("actions.listing")} #{t("companies")}" %></h1>
<div id='edit_div' class='dialog-normal'></div>
<div id='add_contact_div' class='dialog-normal'></div>
<table id='list_companies' class="data-list">
  <thead>
    <tr>
        <th><%= t("id") %></th>
        <th><%= t("short_name") %></th>
        <th><%= t("company_name") %></th>
        <th><%= t('company_type') %></th>
        <th><%= t('icon') %></th>
        <th><%= t('website') %></th>
        <th><%= t('status') %></th>
        <th><%= t('op') %></th>
    </tr>
  </thead>
<% @collection.each do |c| %>
  <%= render :partial => 'row', :locals => {:obj => c} %>
<% end %>
</table>
<%= will_paginate(@collection) %>

