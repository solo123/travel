<%= form_for([:admin, Schedule.find(params[:schedule_id]), @object], :remote => true) do |f| %>
  <div class='container'>
    <div class='span-8'>
      <% if params[:schedule_id] %>
        <%= f.hidden_field :schedule_id, :value => params[:schedule_id] %>
      <% end %>
     <%= f.field_container :title do %>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      <% end %>
      <%= f.field_container :bus do %>
        <%= f.label :bus %><br />
        <%= f.select(:bus_id, Bus.where(:status => 1).collect{|d| [d.name, d.id]}, {:prompt => 'Select Bus'}) %>  	
      <% end %>
      <%= render :partial => 'admin/shared/select_employee', :locals => {:f => f, :field_name => :driver_id} %>
      <%= f.field_container :driver_assistance do %>
        <%= f.label :driver_assistance %><br />
        <%= f.text_field :driver_assistance_id %>
      <% end %>
    </div>
    <div class='span-8 last'>
      <%= f.field_container :tour_guide do %>
        <%= f.label :tour_guide %><br />
        <%= f.text_field :tour_guide_id %>
      <% end %>
      <%= f.field_container :tour_guide_assistance do %>
        <%= f.label :tour_guide_assistance %><br />
        <%= f.text_field :tour_guide_assistance_id %>
      <% end %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
