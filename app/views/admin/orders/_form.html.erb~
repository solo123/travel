<%= form_for([:admin, @object], :remote => true) do |f| %>
  <div class="container">
    <div class='span-8'>
    <p>
      order_number: <%= @object.order_number %>
    </p>
    <%= f.hidden_field :schedule_id %>
    <%= f.hidden_field :schedule_assignment_id %>
    <%= hidden_field_tag :seats %>
    <div id='div_schedule_title'>
      <%= render 'schedule_title', :schedule => @object.schedule %>
    </div>
    <%= button_link_to 'Select Schdule', '/admin/schedules/select?page=order', {:icon => 'add', :remote => true} %>
    <%= f.fields_for :order_customer do |customer| %>
      <p>
        <%= customer.label :customer_id %><br />
        <%= customer.text_field :customer_id %>
        <%= customer.hidden_field :full_name %>
        <%= button_link_to 'Select Customer', '/admin/members/select', {:icon => 'add', 'data-remote' => true} %>
      </p>
    <% end %>
    <%= f.fields_for :order_option do |option| %>
      <p>
        <%= option.label :pickup %><br />
        <%= option.text_field :pickup %>
      </p>
    <% end %>

    </div>
    <div class='span-8 last'>
      <table id='rooms' border='1' padding='2'>
        <thead>
          <tr>
            <th>Room</th>
            <th>Adult</th>
            <th>Child</th>
            <th>Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= f.fields_for :order_items do |item| %>
            <%= render 'form_room', :f => item %>
          <% end %>
        </tbody>
      </table>
      <p><%= link_to "Add room", 'javascript:add_room();' %></p>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>  
<% end %>
